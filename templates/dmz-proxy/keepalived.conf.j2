vrrp_script chk_squid {
  script "/usr/libexec/keepalived/squid-check"
  interval 2
  weight 2
}


vrrp_instance VI_1 {
  interface {{keepalived_interface | default(eth0)}}
  state MASTER
  virtual_router_id 62
  priority 100
  virtual_ipaddress {
    {{keepalived_vip}}
  }
  track_script {
    chk_squid
  }
}

