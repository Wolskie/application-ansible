NFS_CORE_PARAM {
    # possible to mount with NFSv3 to NFSv4 Pseudo path
    mount_path_pseudo = true;
    # NFS protocol
    Protocols = 3,4;
    Clustered = true;
    MNT_Port = 20048;
    NLM_Port = 32803;
    Rquota_Port = 875;
}
EXPORT_DEFAULTS {
    # default access mode
    Access_Type = RW;
}

EXPORT {
    # uniq ID
    Export_Id = 101;
    # mount path of Gluster Volume
    Path = "/mnt/DataVol0";
    FSAL {
    	# any name
        name = GLUSTER;
        # hostname or IP address of this Node
        hostname="{{inventory_hostname}}";
        # Gluster volume name
        volume="DataVol0";
    }
    # config for root Squash
    Squash="No_root_squash";
    # NFSv4 Pseudo path
    Pseudo="/DataVol0";
    # allowed security options
    SecType = "sys";
}

